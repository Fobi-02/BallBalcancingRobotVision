{
    "tasks": [
        {
            "type": "shell",
            "label": "BUILD",
            "command": "g++",
            "args": [
                "${file}",
                "-g",
                "-pedantic",
                "-Wall",
                "-Wextra",
                "-Wcast-align",
                "-Wcast-qual",
                "-Wctor-dtor-privacy",
                "-Wdisabled-optimization",
                "-Wformat=2",
                "-Winit-self",
                "-Wlogical-op",
                "-Wmissing-include-dirs",
                "-Wnoexcept",
                "-Wold-style-cast",
                "-Woverloaded-virtual",
                "-Wredundant-decls",
                "-Wshadow",
                "-Wsign-conversion",
                "-Wsign-promo",
                "-Wstrict-null-sentinel",
                "-Wstrict-overflow=5",
                "-Wswitch-default",
                "-Wundef",
                "-std=c++14", //da qui in poi nuovo
                // "-o",
                // "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-I",
                "C:/opencv/build/include",
                "-L",
                "C:/opencv/build/install/x64/mingw/lib",
                "-lopencv_core490",
                "-lopencv_imgproc490",
                "-lopencv_highgui490"
            ],
            "options": {
                "cwd": "${relativeFileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "RUN",
            "command": "BBR_project.exe",
            "options": {
                "cwd": "${relativeFileDirname}"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "STARTPROMPT",
            "command": "echo ============= BUILD START ==============\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "ENDPROMPT",
            "command": "echo  ============== BUILD END ===============\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "RUNPROMPT",
            "command": "echo ============ PROGRAM START =============\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "BUILD and RUN",
            "dependsOn": [
                "STARTPROMPT",
                "BUILD",
                "ENDPROMPT",
                "RUNPROMPT",
                "RUN"
            ],
            "dependsOrder": "sequence",
            "command": "echo  ============= PROGRAM END ==============\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "echo \"${fileDirname}\""
        }
    ],
    "version": "2.0.0"
}